generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum OrderStatus {
  CREATED
  PROCESSING
  COMPLETED
  FAILED
  RETRYING
}

model Order {
  id             String       @id @default(uuid())
  status         OrderStatus
  payload        Json
  idempotencyKey String       @unique
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([status])
}

model OutboxEvent {
  id          String   @id @default(uuid())
  aggregateId String   // Order ID, but NOT a FK
  aggregate   String   // "order"
  type        String   // "OrderCreated"
  payload     Json
  processed   Boolean  @default(false)
  retryCount  Int      @default(0)
  createdAt   DateTime @default(now())
  processedAt DateTime?

  @@index([processed])
  @@index([aggregateId])
}
